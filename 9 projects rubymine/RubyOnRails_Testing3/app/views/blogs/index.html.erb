<!--<ul><%#= render @blogs %></ul>-->
<%# or %>
<!--<ul><%#= render partial: @blogs %></ul>-->

<table>
  <thead>
    <tr>
      <th>blog name</th>
      <th>blog number</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%# receiving @blogs instance variable from controller %>
    <% @blogs.each do |blog_item| %>
      <tr>
        <%# dynamic linking using prefix methods %>
        <td><%= link_to 'new', new_blog_path %></td>
        <td><%= link_to 'edit object', edit_blog_path(blog_item) %></td>
        <td><%= link_to 'edit id', edit_blog_path(blog_item.id) %></td>
        <td><%= link_to 'show object', blog_path(blog_item) %></td>
        <td><%= link_to 'show id', blog_path(blog_item.id) %></td>
        <%# passing variables & methods inside link_to method: prefix method or just object, http verb (if %>
        <%# http verb is not passed it is assumed to be GET), embeded javascript inside of {} %>
        <td><%= link_to 'delete object', blog_path(blog_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'delete id', blog_path(blog_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# data access %>
        <td>data access combo<%= link_to "show #{blog_item.blog_name}", blog_path(blog_item.id) %></td>
        <td>data access name<%= blog_item.blog_name %></td>
        <td>data access number<%= blog_item.blog_number %></td>
        <%# alternatively html default %>
        <td><a href="/blogs/<%= blog_item.id %>/edit">edit html default</a></td>

        <td><%= link_to 'show @blog only', @blog %></td>
        <td><%= link_to 'delete blog_item only', blog_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

